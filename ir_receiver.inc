;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Modes selection bits
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

#define IR_RECEIVER_MODE_BIT_WAIT		0x0
#define	IR_RECEIVER_MODE_BIT_BURST		0x1
#define	IR_RECEIVER_MODE_BIT_ADDRESS		0x2
#define	IR_RECEIVER_MODE_BIT_ADDRESS_INV	0x3
#define	IR_RECEIVER_MODE_BIT_COMMAND		0x4
#define	IR_RECEIVER_MODE_BIT_COMMAND_INV	0x5
#define	IR_RECEIVER_MODE_BIT_STOP		0x6

#define IR_RECEIVER_MODE_WAIT			1<<IR_RECEIVER_MODE_BIT_WAIT
#define	IR_RECEIVER_MODE_BURST			1<<IR_RECEIVER_MODE_BIT_BURST
#define	IR_RECEIVER_MODE_ADDRESS		1<<IR_RECEIVER_MODE_BIT_ADDRESS
#define	IR_RECEIVER_MODE_ADDRESS_INV		1<<IR_RECEIVER_MODE_BIT_ADDRESS_INV
#define	IR_RECEIVER_MODE_COMMAND		1<<IR_RECEIVER_MODE_BIT_COMMAND
#define	IR_RECEIVER_MODE_COMMAND_INV		1<<IR_RECEIVER_MODE_BIT_COMMAND_INV
#define	IR_RECEIVER_MODE_BYTE			IR_RECEIVER_MODE_ADDRESS | IR_RECEIVER_MODE_ADDRESS_INV | IR_RECEIVER_MODE_COMMAND | IR_RECEIVER_MODE_COMMAND_INV
#define	IR_RECEIVER_MODE_STOP			1<<IR_RECEIVER_MODE_BIT_STOP
